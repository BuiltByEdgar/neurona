# html5 pushstate (history) support:
<IfModule mod_rewrite.c>
  # Activar RewriteEngine
  RewriteEngine on
  # RewriteCond %{SCRIPT_FILENAME} !-d
  RewriteCond %{SCRIPT_FILENAME} !-f

  # Sea cual sea la url introducida por el usuario vamos a llevarlo al index
  # donde Neurona se encargar치 de leerla y enrutarla. Al capturar s칩lo palabras
  # completas sin barra, podr치 cargar de /secciones sin problema.

  RewriteRule ([\w]+) index.html [L]


  # Reescribir la URL solicitada por el usuario
  # RewriteRule ^(([a-z0-9\-]+/)*[a-z0-9\-]+)$ $1.html [NC,L]

